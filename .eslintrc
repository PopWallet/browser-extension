{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended"
  ],
  "env": {
    "webextensions": true,
    "worker": true
  },
  "globals": {
    "Promise": true,
    "document": true,
    "window": true,
    "process": true
  },
  "rules": {
    "react/prop-types": "off",
    "no-console": ["error", { "allow": ["error"] }]
  }
}
